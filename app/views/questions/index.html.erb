<% provide :title, t("question.all_question") %>
<h1><%= t "question.all_question" %></h1>

<div class="form-control">
  <%= link_to t("question.create"), new_question_path %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= t "question.id" %></th>
      <th><%= t "question.content" %></th>
      <th><%= t "question.subject" %></th>
      <th><%= t "question.type" %></th>
      <th><%= t "question.status" %></th>
      <th><%= t "question.answers" %></th>
      <th><%= t "question.action" %></th>
    </tr>
  </thead>
</table>
<%= paginate @questions %>
