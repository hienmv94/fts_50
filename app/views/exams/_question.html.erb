<div class="row">
  <li><strong><%= f.object.question.content %></strong></li>
  <% f.object.question.answers.each do |answer| %>
    <label class="radio">
      <%= f.radio_button :answer_id, answer.id , 
        disabled: f.object.exam.unchecked? or f.object.exam.checked? %>
      <%= answer.content %>
    </label>
  <% end %>
  <% if f.object.exam.checked? || (f.object.exam.unchecked? && current_user.admin?) %>
    <% if f.object.answer.present? && f.object.answer.correct_answer %>
      <span class="label label-primary"><%= t "exams.show.correct" %></span>
    <% else %>
      <span class="label label-danger"><%= t "exams.show.wrong" %></span>
    <% end %>
  <% end %>
</div>
